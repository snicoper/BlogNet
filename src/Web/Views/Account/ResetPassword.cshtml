@model Web.ViewModels.AccountViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-lg-8 m-auto shadow-sm">
                    <form asp-action="ResetPassword" method="post">
                        <h1 class="title">@ViewData["Title"]</h1>

                        <div asp-validation-summary="ModelOnly"></div>
                        <input asp-for="UserId">
                        <input asp-for="Token">

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control">
                            <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-pencil-alt"></i> Crear contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
