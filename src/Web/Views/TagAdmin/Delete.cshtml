@model Tag

@{
    ViewBag.Title = $"Eliminar etiqueta {Model.Name}";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="title">@ViewData["Title"]</h1>

            @if (Model.Articles.Count > 0)
            {
                <div class="row">
                    <div class="col-lg-8 m-auto">
                        <div class="alert alert-danger alert-icon">
                            ¿Seguro que quiere eliminar la etiqueta <strong>@Model.Name</strong>?<br>
                            Si continua, tambien eliminara los siguientes articulos.
                        </div>
                    </div>
                </div>

                <ul>
                    @foreach (var article in Model.Articles)
                    {
                        <li>@article.Title</li>
                    }
                </ul>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-8 m-auto">
                        <div class="alert alert-danger alert-icon">
                            ¿Seguro que quiere eliminar la etiqueta <strong>@Model.Name</strong>?
                        </div>
                    </div>
                </div>
            }

            <form asp-action="DeleteConfirm" method="post">
                <hr>
                <input asp-for="Id" type="hidden">
                <button class="btn btn-danger" type="submit">
                    <i class="far fa-check-circle"></i> Si, eliminar
                </button>
                <a asp-action="List" class="btn btn-secondary">
                    <i class="fas fa-angle-left"></i> Volver
                </a>
            </form>
        </div>
    </div>
</div>
